{{header-component}}
<div class="container-fluid">
<div class="row">
	<div class="col-lg-10">
    <div id="alertMsg" class="alert alert-dismissible" role="alert" hidden>
      <button type="button" class="close" {{action "cerrarMsg"}} aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong>{{msg.tipo}}</strong> {{msg.desc}}
    </div>
  </div>
</div>
<div class="well jumbo-color">
	<div class="row">
    	<div class="col-md-12 ">
           	<div class="panel panel-default">
	            <div class="panel-heading">
	            	<h3 class="panel-title"> Proyectos</h3>
	            </div>
               	<div class="panel-body">
               		<div class="row">
               			<div class="col-md-12  text-center">

               			{{#if sin_proyectos}}
               				<p>Actualmente no hay proyectos bajo su responsabilidad.</p>
               			{{else}}
               				<ul class="list-group">
					          {{#each proyectos as |proyecto|}}
					          		<li class="list-group-item" {{action 'proyecto' proyecto}}>
						          		<div class="row">
                            <div class="col-md-12 text-center">
                                <button class="btn btn-lg width-80" type="submit">
                                <span class="pull-left" >{{fa-icon "folder-o"}}</span> 
                                {{proyecto.nombre}}
                                 <span class="badge">{{proyecto.codigo}}</span>
                                </button>
                                
                            </div>
                          </div>
					          		</li>
					          {{/each}}
					          </ul>  

               			{{/if}}
               			</div>
               		</div>
                </div>
            </div>
        </div>

    </div>
</div>

</div>